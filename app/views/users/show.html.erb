<h3>ユーザー詳細</h3>
<table>
  <tr>
    <th>タイトル</th>
    <td><%= @user.title %></td>
  </tr>

  <tr>
    <th>開始日</th>
    <td><%= @user.start.strftime('%Y/%m/%d') %></td>
  </tr>
  
  <tr>
    <th>終日</th>
    <td><%= @user.check %></td>
  </tr>
 
  <tr>
    <th>終了日</th>
    <td><%= @user.end.strftime('%Y/%m/%d') %></td>
  </tr>

  <tr>
    <th>内容</th>
    <td><%= @user.content  %></td>
  </tr>
</table>
<table>
  <%= form_with model: @post do |f| %>
 </table>
<% end %>
 
<div>
  <ul>
    <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
    <li><%= link_to "予定編集！", [:edit, :user] %></li>
  </ul>
</div>
